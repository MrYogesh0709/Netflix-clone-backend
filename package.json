{
  "name": "netflix-clone-backend",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "start": "yarn run build && node --env-file=.env dist/index.js",
    "format": "prettier --write src/**/*.ts",
    "build": "tsc && esbuild src/index.ts --bundle --platform=node --outfile=dist/index.js --minify --sourcemap",
    "dev:tsc": "tsc --watch --preserveWatchOutput",
    "dev:node": "node --env-file=.env --watch dist dist/index.js",
    "dev:esbuild": "esbuild src/index.ts --bundle --platform=node --outfile=dist/index.js --minify --sourcemap --watch",
    "dev": "run-p dev:*"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write",
      "tsc --noEmit"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@types/bcryptjs": "^2.4.6",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.7",
    "express": "^4.21.2",
    "express-winston": "^4.2.0",
    "helmet": "^8.0.0",
    "ioredis": "^5.5.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.9.5",
    "rate-limiter-flexible": "^5.0.5",
    "winston": "^3.17.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.8",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.8",
    "esbuild": "^0.24.2",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.4.2",
    "typescript": "^5.7.3"
  }
}
